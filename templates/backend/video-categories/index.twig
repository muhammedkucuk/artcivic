{% extends 'backend/layouts/main.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1>Video Kategorileri
                <small>({{ total }})</small>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <a href="{{ path_for('backend.video-categories.create') }}" class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {% if categories %}
                <table id="video-category-list" class="table table-hover">
                    <thead>
                    <tr>
                        <th width="30"></th>
                        <th>Başlık</th>
                        <th width="50">Gösterim</th>
                        <th width="50"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in categories %}
                        <tr>
                            <td class="text-right">{{ loop.index + offset }}</td>
                            <td>
                                <a href="{{ path_for('backend.video-categories.show', {'id': item.id}) }}">{{ item.category_name }}</a>
                            </td>
                            <td class="text-center">
                                <form action="{{ path_for('backend.video-categories.status', {'id': item.id}) }}">
                                    <input type="checkbox" name="status" {{ item.status ? 'checked' }}
                                           data-toggle="toggle" value="1" class="status-changer" data-on=" "
                                           data-onstyle="success" data-off=" " data-offstyle="danger">
                                </form>
                            </td>
                            <td class="text-right">
                                <a href="#" class="btn btn-primary btn-sm">
                                    <i class="glyphicon glyphicon-facetime-video"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                Kategori bulunamadı
            {% endif %}
        </div>
    </div>
{% endblock %}