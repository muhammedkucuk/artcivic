{% extends 'backend/layouts/main.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1>
                <a href="{{ path_for('backend.posts') }}"><i class="glyphicon glyphicon-chevron-left"></i></a>
                Yeni haber
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal xhr-form" action="{{ path_for('backend.posts.store') }}" method="post">
                <div class="form-group">
                    <label for="input-title" class="col-sm-2 control-label">Başlık</label>
                    <div class="col-sm-10">
                        <input type="text" name="title" id="input-title" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="checkbox" name="status" data-toggle="toggle"
                               data-on="Açık" data-onstyle="success" data-off="Kapalı" data-offstyle="danger" value="1">
                    </div>
                </div>

                <div class="form-group">
                    <label for="input-category" class="col-sm-2 control-label">Kategori</label>
                    <div class="col-sm-10">
                        <select name="category" id="input-category" class="form-control">
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="input-image-name" class="col-sm-2 control-label">Vitrin resmi</label>
                    <div class="col-sm-7">
                        <input type="hidden" name="cover" id="input-image-name" class="dropzone hide">
                        <div id="cover" class="dropzone"></div>
                    </div>

                    <div class="col-sm-3"></div>
                </div>

                <div class="form-group">
                    <label for="input-content" class="col-sm-2 control-label">İçerik</label>
                    <div class="col-sm-10">
                        <textarea name="content" id="input-content" class="form-control redactor-text"
                                  rows="10"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block footerScript %}
    <script>
        $(function () {
            $('#cover').dropzone(imageUploadSettings);
        });
    </script>
{% endblock %}